			#ending-yuigon4
				.page_label
					h2 お薬のこと
				.inner
					//.text_box
						img.button_drug src="./assets/images/button/input_text.jpg" width="1041" height="147"
						textarea.input_text placeholder="本文"
					.payingmember
						.button_drug 
							a href="#"
								img src="./assets/images/button/button_images_on.jpg" width="1040" height="147"
